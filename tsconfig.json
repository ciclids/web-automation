{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "src": [
        "./src"
      ]
    },
    "types": [
      "node",
      "webdriverio/sync",
      "@wdio/cucumber-framework"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./config/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compileOnSave": false
}